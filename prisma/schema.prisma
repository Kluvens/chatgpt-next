generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  avatar    String?
  chats     Chat[]
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  request   String
  response  String?
  chatId    String
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id])

  @@index([chatId])
}

model Chat {
  id        String   @id @default(uuid())
  model     ModelType
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  messages  Message[]
  createdAt DateTime @default(now())
}

enum ModelType {
  GPT_4
  GPT_3_5
  GPT_4O
}
